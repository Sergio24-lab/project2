
@model BlogCore.Models.ViewModels.ArticuloVM

@{
    ViewData["Title"] = "Detalle Artículo";

    // Convertir la cadena a un objeto DateTime
    DateTime fechaCreacion = DateTime.Parse(Model.Articulo.FechaCreacion.ToString());

    // Formatear la fecha como una cadena usando ToString con el formato deseado
    string fechaFormateada = fechaCreacion.ToString("dd/MM/yyyy");

    // Verificación de nulos para evitar la excepción
    string categoriaNombre = Model.Articulo.Categoria != null ? Model.Articulo.Categoria.Nombre : "Sin categoría";
}
<br />
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light">
            <div class="col-12">
                <h1 class="text-primary text-center">@Model.Articulo.Nombre</h1>
            </div>
            <div class="col-12">
                <p class="text-muted">Fecha: @fechaFormateada</p>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.Articulo.UrlImagen" class="img-thumbnail mx-auto d-block" style="width: 500px; height: 500px;" />
                <p class="text-primary">@Html.Raw(Model.Articulo.Descripcion)</p>
            </div>

            <div class="col-12">
                <p class="text-primary"><strong>Precio:</strong> @Model.Articulo.PrecioVenta.ToString("C")</p>
            </div>
            <div class="col-12">
                <p class="text-primary"><strong>Stock:</strong> @Model.Articulo.Stock</p>
            </div>
            <div class="col-12">
                <p class="text-primary"><strong>Categoría:</strong> @Model.Articulo.Categoria?.Nombre</p>
            </div>
            <div class="col-12">
                <p class="text-primary"><strong>Proveedor:</strong> @Model.Articulo.Proveedor?.Nombre</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver atrás</a>
                </div>
            </div>
        </div>
    </div>
</div>
