@{
    ViewData["Title"] = "Lista de Empleados";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-12 text-right d-flex justify-content-end">
            <div class="mr-2">
                <a class="btn btn-primary" id="btnGenerarReporte"><i class="fas fa-file-pdf"></i> Generar Reporte PDF</a>
            </div>
            &nbsp;
            &nbsp;
            <div class="ml-1">
                <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nuevo Empleado</a>
            </div>
        </div>

        
    </div>

    <table id="tblEmpleados" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Fecha de Nacimiento</th>
                <th>Salario</th>
                <th>Dirección</th>
                <th>Correo Electrónico</th>
                <th>Número de Teléfono</th>
                <th>Fecha de Contratación</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/empleados.js"></script>
}
